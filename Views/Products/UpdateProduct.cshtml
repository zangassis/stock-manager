@model Product

@{
    ViewData["Title"] = "Update Product " + Model.Name;
}

<div class="container p-5">
    <div class="row">
        <div class="col-6 border border-light rounded p-5 shadow">
            <h6>Update Product @Model.Name</h6>
            <hr />

            <form asp-action="UpdateProduct">
                <input hidden asp-for="Id"/>
                
                <div class="form-group">
                    <label>Name</label>
                    <input asp-for="Name" type="text" class="form-control form-control-sm" />
                </div>

                 <div class="form-group">
                    <label>Quantity</label>
                    <input asp-for="Quantity" type="number" class="form-control form-control-sm" />
                </div>

                 <div class="form-group">
                    <label>Price</label>
                    <input asp-for="Price" step="0,01" type="text" class="form-control form-control-sm" />
                </div>

                 <div class="form-group">
                    <label>Category</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control form-control-sm"></select>
                </div>

                <div class="container">
                    <div class="row">
                        <div>
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                Save
                            </button>
                        </div>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <div class="pl-1">
                            <a class="btn btn-sm btn-light" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>