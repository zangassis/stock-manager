@model Product

@{
  ViewData["Title"] = "New Product";

  <div class="container p-5">
    <div class="row">
      <div class="col-6 border border-light rounded p-5 shadow">
        <h6>New Product</h6>
        <hr />
        <form asp-action="NewProduct">
          <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" type="text" class="form-control form-control-sm" />
          </div>
          <div class="form-group">
            <label>Quantity</label>
            <input asp-for="Quantity" type="text" class="form-control form-control-sm" />
          </div>
          <div class="form-group">
            <label>Price</label>
            <input asp-for="Price" type="text" class="form-control form-control-sm" />
          </div>
          <div class="form-group">
            <label>Category</label>
            <select asp-for="CategoryId" asp.items="ViewBag.CategoryId" class="form-control form-control-sm"></select>            
          </div>  
          <div class="container">
            <div class="row">
                <div>   
                  <button type="submit" class="btn btn-sm btn-outline-success">
                    Save
                  </button>
                </div>
                <div class="p1-1">
                  <a class="btn btn-sm bt-light" asp-action="Index">Back</a>
                </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
}