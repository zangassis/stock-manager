@model Category

@{
  ViewData["Title"] = "Update Category" + Model.Name;

  <div class="container p-5">
    <div class="row">
      <div class="col-6 border border-light rounded p-5 shadow">
        <h6>Update Category @Model.Name</h6>
        <hr />
        <form asp-action="UpdateCategory">

          <input hidden asp-for="Id" />
          <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" type="text" class="form-control form-control-sm" />
          </div>
          <div class="container">
            <div class="row">
                <div>
                  <button type="submit" class="btn btn-sm btn-outline-primary">
                    Save
                  </button>
                </div>
                <div class="p1-1">
                  <a class="btn btn-sm bt-light" asp-action="Index">Back</a>
                </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
}